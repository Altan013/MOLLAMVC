@model LoginVM

<div class="login-page bg-image pt-8 pb-8 pt-md-12 pb-md-12 pt-lg-17 pb-lg-17" style="background-image: url('../assets/images/backgrounds/login-bg.jpg')">
    <div class="container">
        <div class="form-box">
            <div class="form-tab">
                <ul class="nav nav-pills nav-fill" role="tablist">
                    <li class="nav-item ">
                        <a class="nav-link active" style="pointer-events:none" id="signin-tab-2" data-toggle="tab" href="#signin-2" role="tab" aria-controls="signin-2" aria-selected="false">Sign In</a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane fade active show" id="signin-2" role="tabpanel" aria-labelledby="signin-tab-2">
                        <div style="color: red; background-color: white;"  asp-validation-summary="ModelOnly"></div>
                        <form method="post">
                            <input asp-for="Username" class="form-control" placeholder="Username*">
                            <span asp-validation-for="Username" class="text text-danger"></span>

                              
                            <input asp-for="Password" class="form-control" placeholder="Password*">
                            <span asp-validation-for="Password" class="text text-danger"></span>

                            <div class="form-footer">
                                <button type="submit" class="btn btn-outline-primary-2">
                                    <span>LOG IN</span>
                                    <i class="icon-long-arrow-right"></i>
                                </button>

                                <input asp-for="RememberMe">
                                <label style="margin:0;margin-left:10px" for="terms">Remember me</label>


                                <a asp-controller="account" asp-action="forgotpassword" class="forgot-link">Forgot Your Password?</a>

                            </div>
                            <a asp-controller="account" asp-action="register" class="forgot-link">Dont have an account? Sign Up!</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
