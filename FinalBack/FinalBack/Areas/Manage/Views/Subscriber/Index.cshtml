@model List<Subscriber>
@{ ViewData["Title"] = "Index"; }


<div class="col-md-12 top-20 padding-0">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading"><h3>Subscribers Tables</h3></div>
            <div class="panel-body">
                <div class="responsive-table">
                    <table id="datatables-example" class="table table-striped table-bordered dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>E-Mail</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                <tr>
                    <td>
                        @order.Id
                    </td>
                    <td>
                        @order.Email
                    </td>
                </tr>}
                        </tbody>
                    </table>
                    <div style="margin: 0 auto;" class="row justify-content-center mt-4">
                        <nav aria-label="...">
                            <ul class="pagination" style="justify-content:center">

                                <li class="page-item @(ViewBag.Currentpage == 1 ? "disabled" : "")">
                                    @if (ViewBag.Currentpage == 1)
                                    {
                                <a class="page-link" href="javascript:void(0)">Previous</a> }
                            else
                            {
                                <a class="page-link" asp-controller="subscriber" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>}
                                </li>

                                @for (int i = 1; i <= ViewBag.TotalPage; i++)
                                {
                    <li class="page-item  @(ViewBag.CurrentPage == i ? "active" : "")" style="pointer-events: @(ViewBag.CurrentPage == i ? "none" : "")"><a class="page-link" asp-controller="subscriber" asp-action="index" asp-route-page="@i">@i</a></li>}

                                <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPage ? "disabled" : "")">
                                    <a class="page-link" asp-controller="subscriber" asp-action="index" asp-route-page="@(ViewBag.CurrentPage +1)">Next</a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




