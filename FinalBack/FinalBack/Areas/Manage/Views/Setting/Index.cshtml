@model Setting
@{ ViewData["Title"] = "Index"; }


    <div class="panel">
        <div class="panel-body">
            <div class="col-md-6 col-sm-12">
                <h3 class="animated fadeInLeft">Developed by Altan Ibrahimli</h3>
                <p class="animated fadeInDown"><span class="fa  fa-map-marker"></span> Baku,Azerbaijan</p>
            </div>
            <div class="col-md-6 col-sm-12">
                <div class="col-md-6 col-sm-6 text-right" style="padding-left:10px;">
                    <h3 style="color:#DDDDDE;"><span class="fa  fa-map-marker"></span> Baku</h3>
                    <h1 style="margin-top: -10px;color: #ddd;">29<sup>o</sup></h1>
                </div>
                <div>
                    <div class="panel-heading bg-white border-none">
                    </div>
                    <div class="panel-body" style="padding-bottom:140px;">
                        <center>
                            <div class="suny">
                                <div class="sun animated pulse infinite">
                                </div>
                            </div>
                        </center>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12" style="padding:20px;">
        <table class="mt-3 table table-dark">
            <thead>
                <tr>
                    <th>
                        #
                    </th>
                    <th>
                        Navbar logo
                    </th>

                    <th>
                        Settings
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Model?.Id
                    </td>
                    <td>
                        <img style="width:70px" src="~/assets/images/logos/@Model?.HeaderLogoImage" />
                    </td>

                    <td>
                        <a asp-controller="setting" asp-action="edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-icon-text">
                            <i class="mdi mdi-file-check btn-icon-append"></i>
                            Edit
                        </a>

                    </td>
                </tr>
            </tbody>
        </table>

    </div>
<!-- end: content -->












