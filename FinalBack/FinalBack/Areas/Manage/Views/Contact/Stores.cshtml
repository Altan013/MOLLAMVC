@model List<Store>
@{ ViewData["Title"] = "Index"; }


<div class="panel box-shadow-none content-header">
</div>
<div class="col-md-12 top-20 padding-0">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-heading"><h3>Stores Tables</h3></div>
            <div class="panel-body">
                <div class="responsive-table">
                    <table class="mt-3 table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Store name
                                </th>
                                <th>
                                    Store address
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                    <tr>
                        <td>
                            @item.Id
                        </td>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.Address
                        </td>


                        <td>
                            <a asp-controller="contact" asp-action="editstore" asp-route-id="@item.Id" class="btn btn-warning btn-icon-text">
                                <i class="mdi mdi-file-check btn-icon-append"></i>
                                Edit
                            </a>
                            <a asp-controller="contact" asp-action="deletestore" asp-route-id="@item.Id" class="btn btn-danger btn-icon-text delete-btn">
                                <i class="mdi mdi-file-check btn-icon-append"></i>
                                Delete
                            </a>

                        </td>
                    </tr>            }

                        </tbody>
                    </table>
                    <div class="mt-2 d-flex" style="justify-content:flex-end">
                        <a asp-controller="contact" asp-action="createstore" class="btn btn-success btn-icon-text">
                            <i class="mdi mdi-upload btn-icon-prepend"></i>
                            Create
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".delete-btn").click(function (e) {
            e.preventDefault()
            console.log($(this).attr("href"))
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    var link = $(this).attr("href");
                    fetch(link).then(response => response.json()).then(data => {
                        if (data.status == 200) {
                            location.reload(true)
                        } else {
                            Swal.fire(
                                'Not found!',
                                'Your file can not be deleted.',
                                'Failed'
                            )
                        }
                    }
                    );
                }
            })
        })</script>
}
